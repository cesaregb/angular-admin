# To build:
# docker build -t cesaregb/process-admin-dependencies:v1 -f DockerfileDependencies .
# docker push cesaregb/process-admin-dependencies:v1
FROM digitallyseamless/nodejs-bower-grunt
MAINTAINER Cesar Gonzalez, cesareg.borjon@gmail.com

RUN apt-get update && apt-get install -y ruby ruby-compass && \
            apt-get clean && \
            rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN mkdir app
COPY package.json app/package.json
WORKDIR app
RUN npm install
